<div class="page-container">
    <div class="page animation-fade page-forms">
        <div class="page-content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-body">
                        <form class="form-horizontal fv-form fv-form-bootstrap" action="{{ path('admin_partner_partnercreditset', {'id': partner.partnerId | default(0) }) }}" method="post" id="editCreditForm">
                            <div class="form-group has-feedback">
                                <label class="col-sm-3 control-label">是否支持赊购：</label>
                                <div class="col-sm-12 col-md-9 form-bolck">
                                    <div class="example-wrap">
                                        <div class="radio-custom radio-primary col-md-6 col-sm-12">
                                            <input type="radio" name="partner_credit" {% if partner.isCreditBuy == 1 %}checked{% endif %} value="1">
                                            <label for="inputUnchecked">是</label>
                                        </div>
                                        <div class="radio-custom radio-primary col-md-6 col-sm-12">
                                            <input type="radio" name="partner_credit" {% if partner.isCreditBuy == 2 %}checked{% endif %} value="2">
                                            <label for="inputChecked">否</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

