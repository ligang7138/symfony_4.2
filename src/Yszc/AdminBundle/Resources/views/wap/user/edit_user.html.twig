<style>
	.control-text {
		padding-top: 7px;
		margin-bottom: 0;
		text-align: left;
	}

	.file-box {
		width: 208px !important;
	}
</style>
<div class="wrapper wrapper-content fadeInRight" id="photo_box">
	<div class="row">
		<div class="col-sm-12">
			<div class="ibox ">
				<div class="ibox-content">
						<form class="form-horizontal m-t" novalidate="novalidate" id="intocommentForm{{ b_id }}" action="/user/edit_user/{{ u_code }}.html" method="post" onsubmit="fsubmit(this);return false;">
						<fieldset>
							<legend>借款人信息</legend>
							<div class="form-group" id="xxlEditUserInfo">
								<div class="form-bolck">
									<label class="col-sm-2 control-label">客户编号：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.u_code }}</span>
										<input type="hidden" name="u_code" value="{{ userInfo.u_code }}"/>
									</div>
								</div>
								<div class="form-bolck">
									<label class="col-sm-2 control-label">客户类型：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.u_type == 0 ? '个人' : '企业' }}</span>
									</div>
								</div>

							</div>
							<div class="form-group">
								<div class="form-bolck">
									<label class="col-sm-2 control-label">客户名称：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.ui_true_name }}</span>
									</div>
								</div>
								<div class="form-bolck">
									<label class="col-sm-2 control-label">证件编号：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.ui_ident_no }}</span>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="form-bolck">
									<label class="col-sm-2 control-label">手机号：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.ur_phone }}</span>
									</div>
								</div>
								<div class="form-bolck">
									<label class="col-sm-2 control-label">注册时间：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.u_reg_time }}</span>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="form-bolck">
									<label class="col-sm-2 control-label">服务编号：</label>
									<div class="col-sm-3 control-text">
										<span>{{ userInfo.u_service_code}}</span>
									</div>
								</div>
							</div>
							<legend>客户状态</legend>
							<div class="panel-body container-fluid">
								<div class="row row-lg">
									<div class="col-sm-6">
										<div class="example-wrap">
											<div class="radio-custom radio-primary">
												<input type="radio" name="u_status" value="1" {% if userInfo.u_status == 1 %}checked{% endif %}>
												<label for="inputUnchecked">启用</label>
											</div>
										</div>
									</div>
									<div class="col-sm-6">
										<div class="example-wrap">
											<div class="radio-custom radio-primary">
												<input type="radio" name="u_status" value="2" {% if userInfo.u_status == 2 %}checked{% endif %}>
												<label for="inputChecked">停用</label>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-4 col-sm-offset-3" style="margin: 30px 0 0;text-align: center;">
									<button class="btn btn-primary" type="submit">保存</button>
								</div>
							</div>
						</fieldset>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>
